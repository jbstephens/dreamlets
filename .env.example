# Dreamlets Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# For Neon: postgresql://user:password@host.neon.tech/dreamlets?sslmode=require
# For local: postgresql://user:password@localhost:5432/dreamlets
DATABASE_URL=postgresql://user:password@host:5432/dreamlets

# =============================================================================
# AUTHENTICATION
# =============================================================================
# Session secret - use a long random string (at least 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-secure-random-string-here-at-least-32-chars

# =============================================================================
# OPENAI
# =============================================================================
# OpenAI API key for GPT-4o and DALL-E 3
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# STRIPE
# =============================================================================
# Stripe secret key (starts with sk_live_ or sk_test_)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Stripe Price ID for subscription product
# Get from: https://dashboard.stripe.com/products
STRIPE_PRICE_ID=price_xxxxxxxxxxxxxx

# Stripe webhook signing secret (for production)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxx

# =============================================================================
# OPTIONAL
# =============================================================================
# Environment: development or production
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# Custom storage path for user images (default: ./storage)
ASSET_STORAGE_ROOT=./storage
